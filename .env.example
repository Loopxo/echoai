# Echo AI CLI Environment Variables
# Copy this file to .env and fill in your API keys

# Claude (Anthropic) API Key - Best for analysis and code review
# Get your key from: https://console.anthropic.com/
ECHO_CLAUDE_KEY=sk-ant-your-claude-api-key-here

# OpenAI API Key - Excellent for creative and complex tasks
# Get your key from: https://platform.openai.com/api-keys
ECHO_OPENAI_KEY=sk-your-openai-api-key-here

# Groq API Key - Ultra-fast inference with Llama models
# Get your key from: https://console.groq.com/
ECHO_GROQ_KEY=gsk_your-groq-api-key-here

# Meta AI API Key (via Together AI) - Powerful open-source models
# Get your key from: https://together.ai/
ECHO_META_KEY=your-together-ai-api-key-here

# Google Gemini API Key - Multimodal AI (coming soon)
# Get your key from: https://makersuite.google.com/app/apikey
ECHO_GEMINI_KEY=your-gemini-api-key-here

# Default Provider (claude, openai, groq, meta, gemini)
ECHO_DEFAULT_PROVIDER=claude

# Default Model
ECHO_DEFAULT_MODEL=claude-3-sonnet-20240229

# Default Temperature (0-2)
ECHO_DEFAULT_TEMPERATURE=0.7

# Default Max Tokens
ECHO_DEFAULT_MAX_TOKENS=4096

# Enable streaming by default (true/false)
ECHO_DEFAULT_STREAMING=true

# Enable intelligent agents (true/false)
ECHO_AGENTS_ENABLED=true

# Default agent optimization level (basic/enhanced/expert)
ECHO_AGENTS_OPTIMIZATION_LEVEL=enhanced

# Enable VS Code integration (true/false)
ECHO_VSCODE_ENABLED=true

# Enable diff preview (true/false)
ECHO_DIFF_PREVIEW=true

# Debug mode (true/false)
DEBUG=false