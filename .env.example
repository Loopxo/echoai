# AI Terminal CLI Environment Variables
# Copy this file to .env and fill in your API keys

# Claude (Anthropic) API Key
# Get your key from: https://console.anthropic.com/
AI_CLAUDE_KEY=sk-ant-your-claude-api-key-here

# OpenAI API Key  
# Get your key from: https://platform.openai.com/api-keys
AI_OPENAI_KEY=sk-your-openai-api-key-here

# Google Gemini API Key
# Get your key from: https://makersuite.google.com/app/apikey
AI_GEMINI_KEY=your-gemini-api-key-here

# Default Provider (claude, openai, gemini)
AI_DEFAULT_PROVIDER=claude

# Default Model
AI_DEFAULT_MODEL=claude-3-sonnet-20240229

# Default Temperature (0-2)
AI_DEFAULT_TEMPERATURE=0.7

# Default Max Tokens
AI_DEFAULT_MAX_TOKENS=4096

# Enable streaming by default (true/false)
AI_DEFAULT_STREAMING=true

# Enable VS Code integration (true/false)
AI_VSCODE_ENABLED=true

# Enable diff preview (true/false)
AI_DIFF_PREVIEW=true

# Debug mode (true/false)
DEBUG=false