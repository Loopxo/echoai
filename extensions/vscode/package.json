{
  "name": "echo-ai-vscode",
  "displayName": "Echo AI",
  "description": "35+ specialized AI agents, quantum code understanding, predictive intelligence. The most advanced AI coding assistant with multi-provider support.",
  "version": "1.1.1",
  "publisher": "LoopXo",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets",
    "Programming Languages"
  ],
  "keywords": [
    "ai",
    "artificial intelligence",
    "code completion",
    "agents",
    "specialized agents",
    "quantum code",
    "predictive",
    "intellisense",
    "assistant",
    "typescript",
    "javascript",
    "python",
    "java",
    "security",
    "refactoring",
    "multi-provider",
    "claude",
    "openai",
    "copilot alternative",
    "echo",
    "development studio"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/clean-extension.js",
  "contributes": {
    "commands": [
      {
        "command": "echo-ai.explain",
        "title": "Explain Code"
      },
      {
        "command": "echo-ai.refactor",
        "title": "Refactor Code"
      },
      {
        "command": "echo-ai.generateTests",
        "title": "Generate Tests"
      },
      {
        "command": "echo-ai.configure",
        "title": "Configure Echo AI"
      },
      {
        "command": "echo-ai.showCLI",
        "title": "Open Echo AI Terminal"
      },
      {
        "command": "echo-ai.performance",
        "title": "Show Performance"
      }
    ],
    "keybindings": [
      {
        "command": "echo-ai.explain",
        "key": "ctrl+shift+e",
        "when": "editorHasSelection"
      },
      {
        "command": "echo-ai.showCLI",
        "key": "ctrl+shift+c",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Echo AI",
      "properties": {
        "echoAI.provider": {
          "type": "string",
          "default": "claude",
          "enum": ["claude", "openai", "groq", "openrouter", "gemini", "meta"],
          "description": "AI provider for completions"
        },
        "echoAI.model": {
          "type": "string",
          "default": "claude-3-5-sonnet-20241022",
          "description": "Model to use for completions"
        },
        "echoAI.enableInlineCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable inline completions"
        },
        "echoAI.completionDelay": {
          "type": "number",
          "default": 1000,
          "description": "Delay before showing completions (ms)"
        },
        "echoAI.maxContextSize": {
          "type": "number",
          "default": 2000,
          "description": "Maximum context size for AI requests"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "echo-ai.explain",
          "when": "editorHasSelection",
          "group": "echo-ai"
        },
        {
          "command": "echo-ai.refactor", 
          "when": "editorHasSelection",
          "group": "echo-ai"
        },
        {
          "command": "echo-ai.generateTests",
          "when": "editorTextFocus",
          "group": "echo-ai"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "echo 'Skipping compile for packaging'",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/vijeet-shah/echoai.git",
    "directory": "extensions/vscode"
  },
  "license": "MIT",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#A8E6CF",
    "theme": "light"
  }
}